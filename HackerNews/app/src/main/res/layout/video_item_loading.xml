<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:orientation="vertical"
                                               android:padding="@dimen/dimen_15_30">

    <ImageView
        android:id="@+id/image"
        android:scaleType="centerCrop"
        android:src="@drawable/img_empty_data"
        app:layout_aspectRatio="165%"
        app:layout_widthPercent="100%"/>

    <View
        android:id="@+id/view_1"
        android:layout_width="@dimen/dimen_200_400"
        android:layout_height="20dp"
        android:layout_below="@+id/image"
        android:layout_marginTop="5dp"
        android:background="@drawable/img_empty_data"/>

    <View
        android:layout_width="@dimen/dimen_100_200"
        android:layout_height="20dp"
        android:layout_below="@+id/view_1"
        android:layout_marginTop="@dimen/dimen_3_6"
        android:background="@drawable/img_empty_data"
        />

</android.support.percent.PercentRelativeLayout>