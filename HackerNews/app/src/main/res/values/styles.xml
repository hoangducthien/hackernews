<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tab_height</item>
    </style>


    <style name="ToolbarShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_5_10</item>
        <item name="android:layout_marginTop">@dimen/tab_height</item>
        <item name="android:background">@drawable/shadow_toolbar</item>
    </style>

</resources>
